{
  "include": [
    "./src/**/*",
    "./bin/*"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",

    "target": "es6",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],

    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,

    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  }
}
